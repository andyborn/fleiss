#!/usr/bin/env ruby

lib_dir = File.expand_path('../lib', __dir__)
$LOAD_PATH.push(lib_dir) unless $LOAD_PATH.include?(lib_dir)

require 'fleiss/cli'

STDOUT.sync = true
STDERR.sync = true

cli = Fleiss::CLI.instance
begin
  cli.parse!
  cli.run!
rescue ArgumentError => e
  warn " ! #{e.message}\n"
  STDERR.puts
  warn cli.parser
  exit 1
rescue StandardError => e
  warn e.message
  warn e.backtrace.join("\n")
  exit 1
end
